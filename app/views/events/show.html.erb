<div id="event-<%= @event.id %>">
  <span class="user"><%= link_to @event.user.name, @event.user %></span>
  <span class="name"><%= @event.name %></span>
  <span class="duration"><%= @event.startTime.to_formatted_s(:long) %> to <%= @event.endTime.to_formatted_s(:long) %></span>
  <span class="description"><%= @event.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(@event.created_at) %> ago.
  </span>
      <% if current_user?(@event.user) %>
      <%= link_to "delete", @event, method: :delete,
                                       data: { confirm: "You sure?" },
                                       title: @event.name %>
    <% end %>
</div>