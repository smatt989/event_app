<div>
	<h1><%= @user.firstName %></h1>
	<h1><%= @user.email %></h1>
	<div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.events.any? %>
      <h3>Events (<%= @user.events.count %>)</h3>
      <ol class="events">
        <%= render @events %>
      </ol>
      <%= will_paginate @events %>
    <% end %>
  </div>

</div>